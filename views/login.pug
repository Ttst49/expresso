html
    head
        title login
    body
        h4 #{message}
        form(method="POST", action="/login")
            input(type="hidden", name="_method", value="PUT")
            p User ID:
            input(type="text", name="id", required placeholder='Enter User ID')
            p Password:
            input(type="password", name="password", required placeholder="Enter Password")
            p
            input(type="submit")